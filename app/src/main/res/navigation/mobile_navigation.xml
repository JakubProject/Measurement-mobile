<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.university.healthapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/measurement" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.university.healthapp.ui.food.FoodFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/food" />

    <fragment
        android:id="@+id/navigation_recommended"
        android:name="com.university.healthapp.ui.recommended.RecommendedFragment"
        android:label="@string/title_recommended"
        tools:layout="@layout/recommended_product" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.university.healthapp.ui.measurements.MeasurementFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/list_of_measurements" />
</navigation>